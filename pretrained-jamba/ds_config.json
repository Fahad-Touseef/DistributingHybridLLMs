{
  "train_batch_size" : 16,
  "train_micro_batch_size_per_gpu" : 8,

   "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 0.001,
      "betas": [
        0.9,
        0.999
      ],
      "eps": 1e-8
    }
  },
  "pipeline": {
    "activation_checkpoint_interval": 1,
    "pipeline_parallel_size": 2,
    "optimize": "memory"
  },
  "flops_profiler": {
    "enabled": true,
    "profile_step": 50,
    "module_depth": -1,
    "top_modules": 5,
    "detailed": true,
    "output_file": "flops_profile.txt"
  },
  
  "steps_per_print" : 10,
  "wall_clock_breakdown" : false,
  "num_gpus" : 4,
  "world_size":2,
  "gradient_accumulation_steps" : 1
 }