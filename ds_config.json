{
  "train_micro_batch_size_per_gpu": 64,
  "gradient_accumulation_steps": 1,
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 5e-4,
      "betas": [0.9, 0.999],
      "eps": 1e-8,
      "weight_decay": 0.01
    }
  },
  "fp16": {
    "enabled": true        
  },
  "zero_optimization": {
    "stage": 2
  },
  "pipeline": {
    "stages": 4
  },
  "flops_profiler": {
    "enabled": true,
    "profile_step": 50,
    "module_depth": -1,
    "top_modules": 5,
    "detailed": true,
    "output_file": "flops_profile.txt"
  }
}
